# Routes
GET     /                                   controllers.IndexController.index
GET     /signin                             controllers.IndexController.signin
POST    /signin                             controllers.IndexController.signincheck
GET     /signup                             controllers.IndexController.signup
POST    /register                           controllers.UserController.register
GET     /signout                            controllers.IndexController.signout
GET     /main                               controllers.IndexController.main

GET	    /user/ditail/:id		            controllers.UserController.userDetail(id: String)

GET     /restaurant                        controllers.UserController.index(username: Option[String],userID: Option[String])
GET     /restaurant/new                    controllers.RestaurantController.add
POST    /restaurant/new                    controllers.RestaurantController.register
GET     /restaurant/detail/:id             controllers.RestaurantController.restaurantDetail(id:Int)
POST    /restaurant/detail/:id/karttanaAdd controllers.RestaurantController.karttanaAdd(id: Int)

GET     /assets/*file                        controllers.Assets.versioned(path="/public", file: Asset)
